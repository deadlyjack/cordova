        "babel-loader": "^8.2.1",
        "cordova-android": "^9.1.0",
        "cordova-browser": "^6.0.0",
        "cordova-electron": "^2.0.0",
        "cordova-plugin-whitelist": "^1.3.4",
        "css-loader": "^3.4.0",
        "eslint": "^7.25.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.22.1",
