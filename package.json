{
    "name": "helloworld",
    "displayName": "HelloCordova",
    "version": "2.0.0",
    "description": "A sample Apache Cordova application that responds to the deviceready event.",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "config-build": "node ./utils/config.js",
        "start": "yarn config-build d && webpack --progress --mode development && cordova run android",
        "start-for": "yarn config-build d && webpack --progress --mode development && cordova run",
        "build": "yarn config-build d && webpack --progress --mode development",
        "build-release": "yarn config-build p && webpack --progress --mode production",
        "build-android": "yarn config-build p && webpack --progress --mode production && cordova build android --release",
        "add-page": "node ./utils/pages add",
        "del-page": "node ./utils/pages remove"
    },
    "keywords": [
        "ecosystem:cordova"
    ],
    "author": "Apache Cordova Team",
    "license": "Apache-2.0",
    "devDependencies": {
        "@babel/core": "^7.14.8",
        "@babel/plugin-transform-runtime": "^7.14.5",
        "@babel/preset-env": "^7.14.9",
        "autoprefixer": "^10.3.1",
        "babel-loader": "^8.2.1",
        "cordova-android": "^9.1.0",
        "css-loader": "^5.2.6",
        "electron": "^13.1.8",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.23.3",
        "file-loader": "^6.2.0",
        "jest": "^27.0.6",
        "mini-css-extract-plugin": "^1.6.0",
        "node-sass": "^6.0.0",
        "postcss": "^8.3.0",
        "postcss-loader": "^5.3.0",
        "raw-loader": "^4.0.2",
        "sass-loader": "^11.1.1",
        "style-loader": "^2.0.0",
        "terser-webpack-plugin": "^5.1.4",
        "webpack": "^5.48.0",
        "webpack-cli": "^4.7.0"
    },
    "dependencies": {
        "@deadlyjack/ajax": "^1.0.7",
        "autosize": "^5.0.1",
        "cordova-plugin-statusbar": "^2.4.3",
        "core-js": "^3.16.0",
        "html-tag-js": "^1.0.1",
        "mustache": "^4.0.1"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-statusbar": {}
        },
        "platforms": [
            "browser",
            "android"
        ]
    },
    "browserslist": [
        "> 60%",
        "last 2 versions"
    ],
    "engines": {
        "node": ">=12.0"
    }
}