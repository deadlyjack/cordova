{
    "plugins": [
        "jsx"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "jsx/mark-used-vars": "error",
        "jsx/no-undef": "error",
        "no-use-before-define": "off",
        "no-param-reassign": "off",
        "no-multi-assign": "off",
        "no-plusplus": "off",
        "lines-between-class-members": "off"
    },
    "globals": {
        "cordova": "readonly",
        "app": "readonly",
        "actionStack": "readonly",
        "PLATFORM": "readonly",
        "ROOT": "readonly",
        "IS_ANDROID": "readonly",
        "IS_ELECTRON": "readonly",
        "native": "readonly"
    },
    "settings": {
        "import/resolver": {
            "typescript": {},
            "node": {
                "paths": [
                    "src"
                ]
            }
        }
    }
}